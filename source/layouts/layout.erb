<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible"  content="ie=edge">
    <meta name="description"  content="Bootstrap Template">
    <meta name="keywords" content="HTML,CSS,XML,JavaScript">
    <meta name="author" content="Germano Caldeira">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Use the title from a page's frontmatter if it has one -->
    <title><%= current_page.data.title || "Middleman" %></title>
    <%= stylesheet_link_tag "site" %>
    <%= javascript_include_tag "site" %>
  </head>
  <body>
	<h1 id="title"><%= link_to 'Kustom Rod Depot', '/' %></h1>
	<ul id="menu">
	  <li><%= link_to 'Home',      '/' %></li>
	  <li><%= link_to 'Products',  '/products/' %></li>
	  <li><%= link_to 'Services',  '/services/' %></li>
	  <li><%= link_to 'Contact',   '/contact/' %></li>
	</ul>
  <%= yield %>
	<footer>
    <hr />
	&copy;Kustom Rod Depot - Since 2010
	</footer>
  </body>
</html>
